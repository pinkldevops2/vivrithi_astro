---
const {
  width = 269,
  height = 235,
  duration = '2.5s',
  blue = '#0074BC',
  orange = '#F58220',
  baseStrokeWidth = 1.5,
  highlightStrokeWidth = 3,
  grey = '#ccc',
} = Astro.props;
---

<style>
  .base {
    stroke-dasharray: 5 5; /* dotted initially */
    stroke-width: var(--base-w);
    fill: none;
    stroke: var(--grey); /* start grey */
    transition: stroke 0.5s ease;
  }

  .base.solid-blue { stroke: var(--blue); }
  .base.solid-orange { stroke: var(--orange); }

  .highlight {
    stroke-dasharray: 30 300;
    stroke-linecap: round;
    stroke-width: var(--highlight-w);
    fill: none;
    animation: move var(--anim-duration) linear infinite; /* loop forever */
  }

  @keyframes move {
    from { stroke-dashoffset: 0; }
    to   { stroke-dashoffset: -330; }
  }
</style>

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 269 235"
  width={width}
  height={height}
  aria-hidden="true"
  role="img"
  style={`--anim-duration: ${duration}; --base-w: ${baseStrokeWidth}; --highlight-w: ${highlightStrokeWidth}; --blue: ${blue}; --orange: ${orange}; --grey: ${grey};`}
>

  <!-- BLUE LEFT CURVE -->
  <path id="blueLeft" class="base" d="M0.495453,0.426163c0,0,6.370027,46.903137,18.234447,72.000037C36.9643,110.998,49.107,125.45,83.8528,152.14c26.5912,20.426,62.5182,28.286,83.3572,46.286c13.172,11.377,26.049,36,26.049,36" />
  <path class="highlight" stroke={blue} d="M0.495453,0.426163c0,0,6.370027,46.903137,18.234447,72.000037C36.9643,110.998,49.107,125.45,83.8528,152.14c26.5912,20.426,62.5182,28.286,83.3572,46.286c13.172,11.377,26.049,36,26.049,36"
    onanimationiteration="document.getElementById('blueLeft').classList.add('solid-blue')" />

  <!-- BLUE RIGHT CURVE -->
  <path id="blueRight" class="base" d="M0.495453,0.426163L96.8774,59.569c0,0,88.5676,54,101.5916,108c7.32,30.347-5.21,66.857-5.21,66.857" />
  <path class="highlight" stroke={blue} d="M0.495453,0.426163L96.8774,59.569c0,0,88.5676,54,101.5916,108c7.32,30.347-5.21,66.857-5.21,66.857"
    onanimationiteration="document.getElementById('blueRight').classList.add('solid-blue')" />

  <!-- ORANGE LEFT CURVE -->
  <path id="orangeLeft" class="base" d="M268.495,0.426163c0,0-6.37,46.903137-18.234,72.000037-18.234,38.5718-30.377,53.0238-65.123,79.7138-26.591,20.426-62.518,28.286-83.357,46.286-13.1718,11.377-26.0494,36-26.0494,36" />
  <path class="highlight" stroke={orange} d="M268.495,0.426163c0,0-6.37 46.903137-18.234 72.000037-18.234 38.5718-30.377 53.0238-65.123 79.7138-26.591 20.426-62.518 28.286-83.357 46.286-13.1718 11.377-26.0494 36-26.0494 36"
    onanimationiteration="document.getElementById('orangeLeft').classList.add('solid-orange')" />

  <!-- ORANGE RIGHT CURVE -->
  <path id="orangeRight" class="base" d="M268.495,0.426163L172.114,59.569c0,0-88.5676,54-101.5922,108-7.3195,30.347,5.2098,66.857,5.2098,66.857" />
  <path class="highlight" stroke={orange} d="M268.495,0.426163L172.114,59.569c0,0-88.5676,54-101.5922,108-7.3195,30.347,5.2098,66.857,5.2098,66.857"
    onanimationiteration="document.getElementById('orangeRight').classList.add('solid-orange')" />

</svg>
