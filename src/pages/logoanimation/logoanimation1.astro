<!-- CLIENT-SIDE SCRIPT -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" is:defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/MotionPathPlugin.min.js" is:defer></script>

<script is:client>
  gsap.registerPlugin(MotionPathPlugin);

  const METEOR_SPEED = 5.8;

  function blueMeteor(id, path, speed, delay) {
    gsap.to(id, {
      duration: speed,
      repeat: -1,
      ease: "none",
      delay: delay,
      motionPath: {
        path,
        align: path,
        autoRotate: true,
        start: 1,
        end: 0,
        alignOrigin: [0.5, 0.5],
      },
    });
  }

  function orangeMeteor(id, path, speed, delay) {
    gsap.to(id, {
      duration: speed,
      repeat: -1,
      ease: "none",
      delay,
      motionPath: {
        path,
        align: path,
        autoRotate: true,
        alignOrigin: [0.5, 0.5],
      },
    });
  }

  /* BLUE */
  blueMeteor("#b1", "#p1", METEOR_SPEED, 0);
  blueMeteor("#b2", "#p2", METEOR_SPEED, 0.3);
 /*  blueMeteor("#b3", "#p1", METEOR_SPEED, 0.6); */

  /* ORANGE */
  orangeMeteor("#o1", "#p3", METEOR_SPEED, 0.2);
  orangeMeteor("#o2", "#p4", METEOR_SPEED, 0.5);
/*   orangeMeteor("#o3", "#p3", METEOR_SPEED, 0.8); */
</script>

