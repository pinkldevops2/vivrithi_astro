<!-- Load GSAP -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" is:client></script>

<!-- Animation Script -->
<script is:client>
  // wait a frame to ensure the SVG is rendered
 document.addEventListener("DOMContentLoaded", () => {

  const paths = document.querySelectorAll("#animatedSvg path");

  const tl = gsap.timeline({
    repeat: -1,
    repeatDelay: 1 // delay between repeats
  });

  paths.forEach((path, i) => {

    const length = path.getTotalLength();
    const originalDash = path.getAttribute("stroke-dasharray");

    gsap.set(path, {
      strokeDasharray: length + " " + length,
      strokeDashoffset: length
    });

    // Slower draw animation
    tl.to(path, {
      strokeDashoffset: 0,
      duration: 4,   // slower draw (was 2)
      ease: "power2.inOut",
    }, i * 1.5);     // stagger start a bit more for effect

    tl.to(path, {
      strokeDasharray: originalDash,
      duration: 1.2
    });
  });

});
</script>
