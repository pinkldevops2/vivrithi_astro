        <h1 class="gradient-text  text-[28px] md:text-[35px] font-heading leading-[120%] mb-4">
          {item.title}
        </h1>

        {/* <p class="text-gray-600 mb-8 max-w-4xl">
          {item.excerpt}
        </p> */}

        <!-- Main Content -->
        <div class="text-gray-700 leading-relaxed mb-8">
          <div class="content" set:html={item.content}></div>


        </div>

        <!-- Two Images -->
