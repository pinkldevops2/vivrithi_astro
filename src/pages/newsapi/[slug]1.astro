---
// Imports
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import { GRAPHQL } from "../../config/graphql.js";
export const prerender = false;

// =============================
// 1. getStaticPaths – Fetch all news
// =============================
export async function getStaticPaths() {
  const res = await fetch(GRAPHQL, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      query: `{
        news {
          nodes {
            slug
            uri
            title
            date
            content
            excerpt
            featuredImage { node { sourceUrl } }
            newsCategories { nodes { name } }
          }
        }
      }`
    })
  });

  const data = await res.json();

  // Pass EVERY news item to each page so we can compute related posts
  return data.data.news.nodes.map((n) => ({
    params: { slug: n.slug },
    props: { item: n, allNews: data.data.news.nodes }
  }));
}

// =============================
// 2. get() – return props
// =============================
export async function get({ params, props }) {
  const item = props?.item || null;

  if (!item || params.slug.match(/\.(png|jpg|jpeg|svg|gif|ico|webp)$/)) {
    return { status: 404, props: { item: null } };
  }

  return { props }; // includes item + allNews
}

// =============================
// 3. Local variables
// =============================
const { item, allNews } = Astro.props;

// Compute related items (exclude current)
const related = allNews
  .filter((n) => n.slug !== item.slug)
  .slice(0, 3);
---

