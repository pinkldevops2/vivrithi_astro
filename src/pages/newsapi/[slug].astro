---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import { GRAPHQL } from "../../config/graphql.js";

const { slug } = Astro.params;

let item = null;
let related = [];
let fetchError = null;

try {
  // Fetch single news item by slug (String type)
  const singleQuery = `
    query SingleNewsBySlug($slug: String!) {
      newsItemBy(slug: $slug) {
        slug
        title
        date
        content
        featuredImage {
          node {
            sourceUrl
          }
        }
      }
    }
  `;

  // Fetch all news for related posts
  const allQuery = `
    query AllNews {
      news(first: 100) {
        nodes {
          slug
          title
          date
          featuredImage {
            node {
              sourceUrl
            }
          }
        }
      }
    }
  `;

  const resSingle = await fetch(GRAPHQL, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ query: singleQuery, variables: { slug } }),
  });

  const resAll = await fetch(GRAPHQL, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ query: allQuery }),
  });

  const jsonSingle = await resSingle.json();
  const jsonAll = await resAll.json();

  if (jsonSingle.errors) throw new Error(jsonSingle.errors.map(e => e.message).join(", "));
  if (jsonAll.errors) throw new Error(jsonAll.errors.map(e => e.message).join(", "));

  item = jsonSingle.data.newsItemBy || null;
  const allNews = jsonAll.data.news?.nodes || [];
  related = allNews.filter(n => n.slug !== item?.slug).slice(0, 3);

} catch (err) {
  fetchError = err;
}
---

<Layout>
  <Header />

  <main class="max-w-6xl mx-auto px-4 py-10">
    <p class="mb-4 underline">
      <a href="/newsapi/">‚Üê Go Back</a>
    </p>

    {fetchError && <p class="text-red-500">Error fetching news: {fetchError.message}</p>}
    {!fetchError && !item && <p class="text-red-500">News not found for slug: {slug}</p>}

    {item && (
      <>
        <h1 class="gradient-text text-3xl font-bold text-[#1a4b8c] mb-4">{item.title}</h1>

        {item.featuredImage?.node?.sourceUrl && (
          <img
            src={item.featuredImage.node.sourceUrl}
            alt={item.title}
            class="mb-6 w-full rounded-md object-cover"
          />
        )}

        <div class="text-gray-700 leading-relaxed mb-8">
          <div class="content" set:html={item.content}></div>
        </div>
      </>
    )}
  </main>

  {item && related.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 py-16">
      <h2 class="text-2xl font-semibold mb-8">Related Content</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {related.map((rel) => (
          <a href={`/newsapi/${rel.slug}`} class="block group" key={rel.slug}>
            <div class="h-48 rounded-md overflow-hidden mb-4">
              <img
                src={rel.featuredImage?.node?.sourceUrl || "/placeholder.jpg"}
                alt={rel.title}
                class="w-full h-full object-cover group-hover:scale-105 transition"
              />
            </div>

            <p class="text-sm text-gray-500 mb-1">News | 5 min read</p>

            <h3 class="font-semibold text-lg mb-2 group-hover:text-[#1a4b8c] transition">{rel.title}</h3>

            <p class="text-gray-500 text-sm flex items-center gap-2 mt-1">
              <span>üïí</span>
              {new Date(rel.date).toLocaleDateString("en-GB", {
                day: "numeric",
                month: "short",
                year: "numeric",
              })}
            </p>

            <p class="text-[#1a4b8c] font-semibold text-sm mt-3">READ MORE ‚Üí</p>
          </a>
        ))}
      </div>
    </section>
  )}

  <Footer />
</Layout>
  