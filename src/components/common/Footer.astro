---
import vivrithiLogo from '../../../public/Vivrithi-NEXT.svg';
import instagram from '../../../public/instagram.svg';
import linkedin from '../../../public/linkedin.svg';
import youtube from '../../../public/youtube.svg';
---

<footer class="text-white pt-[4px]">
  <!-- Main Section -->
   <div class="bg-white">
  <div class="container bg-white px-6 py-15 mx-auto flex flex-wrap justify-between lg:flex-nowrap gap-10">
    <!-- Left Column (Logo) -->
    <div class="w-full lg:w-[35%] flex justify-center lg:justify-start">
      <img src={vivrithiLogo.src} alt="Vivrithi Logo" class="w-[100%] w-auto" />
    </div>

    <!-- Right Column (Menus) -->
    <div class="w-full lg:w-[45%] grid grid-cols-2 text-center md:text-left sm:grid-cols-2 md:grid-cols-3 gap-6">
      <div>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/about" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
          <li><a href="/careers" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
          <li><a href="/contact" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
        </ul>
      </div>

      <div>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/product-1" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
          <li><a href="/product-2" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
          <li><a href="/product-3" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
        </ul>
      </div>

      <div>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/downloads" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
          <li><a href="/certifications" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
          <li><a href="/support" class="hover:text-blue-500 transition">Lorem Ipsum</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
  <!-- Bottom Section (Copyright & Social Links) -->
  <div class="max-w-7xl mx-auto flex flex-col sm:flex-row justify-between items-center py-4 text-sm text-gray-400">
    <p class=" text-[#ffffff]"><b>© 2025 VIVRITI next</b>   |   Privacy Policy</p>
    <div class="flex space-x-5 mt-4 sm:mt-0">      
      <a href="#" aria-label="LinkedIn" class="hover:text-blue-400 transition">
        <img src={linkedin.src} alt="Follow us on LinkedIn" class="w-[100%] w-auto" />
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-blue-600 transition">
        <img src={instagram.src} alt="Follow us on Instagram" class="w-[100%] w-auto" />
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-blue-500 transition">
        <img src={youtube.src} alt="Find us on Instagram" class="w-[100%] w-auto" />
      </a>
    </div>
  </div>
</footer>
<style>
    footer{
        background: #3BBAE2;
background: linear-gradient(32deg, rgba(59, 186, 226, 1) 0%, rgba(242, 114, 140, 1) 50%, rgba(245, 130, 32, 1) 100%);
    }
</style>
